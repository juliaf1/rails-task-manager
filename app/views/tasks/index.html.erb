<div class="container text-center mt-5">
  <h1>My tasks</h1>

  <ul class="mt-3">
    <% @tasks.each do |task| %>
      <% if task.completed %>
        <li><i class="fas fa-check-square"></i> <%= link_to task.title, task_path(task) %>
          <%= link_to delete_path(task), method: :delete, data: { confirm: "Are you sure?" } do %>
          <i class="fas fa-trash-alt"></i>
          <% end %>
        </li>
      <% else %>
        <li><i class="fas fa-square"></i> <%= link_to task.title, task_path(task) %>
          <%= link_to delete_path(task), method: :delete, data: { confirm: "Are you sure?" } do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        </li>
      <% end %>
    <% end %>
  </ul>

  <%= link_to 'Add a new task', new_path, class: "btn btn-dark" %>
</div>

