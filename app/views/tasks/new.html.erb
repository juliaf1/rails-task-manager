<div class="container text-center mt-5">
  <h1>Add new task</h1>

  <%= link_to 'Back to list', tasks_path, class: "btn btn-light btn-sm mb-3" %>

  <%= simple_form_for(@task) do |f| %>
    <%= f.input :title %>
    <%= f.input :details %>
    <%= f.input :completed, as: :boolean %>
    <%= f.button :submit, class: "btn btn-dark" %>
  <% end %>

</div>
